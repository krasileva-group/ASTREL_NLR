#!/usr/bin/perl
use strict;
use warnings;

my ($list, $infile, $output, $output1, $output2)=@ARGV;

my %species;
my @headers;
open(IN, "$list")||die"IN $list\n";
while(<IN>){
	chomp;
	$species{$_}=1;
	push @headers, $_;
}
close IN;

open(OUT, ">$output");
open(OUT1, ">$output1");
open(OUT2, ">$output2");
open(IN, "$infile")||die"IN $infile\n";
while(<IN>){
	chomp;
	$_=~s/[\s]+/\t/g;
	my %counts;
	my @split=split /\t/, $_;
	for my $n (1 .. $#split){
		my @var=split /\|/, $split[$n];
		$counts{$var[0]}++;
	}
	my @results;
	for my $sp (@headers){
		if($counts{$sp}){
			if($counts{$sp}==1){
				push @results, "1";
			}
			else{
				push @results, "m";
			}
		}
		else{
			push @results, "0";
		}
	}
	print OUT join ("\t", $split[0], join ("", @results), $_),"\n";
	if(scalar keys %counts ==1){
		print OUT1 join ("\t", $split[0], join ("", @results), $_),"\n";
	}
	elsif(scalar keys %counts == 12){
		print OUT2 join ("\t", $split[0], join ("", @results), $_),"\n";
	}
}
close IN;
close OUT;
close OUT1;
close OUT2;
